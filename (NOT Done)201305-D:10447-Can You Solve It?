//Can you solve it?

#include <iostream>

int main(void)
{
    int amountOfCases, currentCase = 0, stepsFromOriginToPointOne, stepsFromOriginToPointTwo, stepsNeededBetweenTwoPoints;

    unsigned long long int x1, y1, x2, y2;

    std::cin >> amountOfCases;

    if (amountOfCases <= 0 || amountOfCases >500)
    {
        return 0;
    }

    for(int i = 0; i < amountOfCases; i++)
    {
        currentCase++;
        std::cin >> x1 >> y1 >> x2 >> y2;

        if (x1 < 0 || x1 > 100000)
        {
            currentCase--;
            continue;
        }
        else if (x2 < 0 || x2 > 100000)
        {
            currentCase--;
            continue;
        }
        else if (y1 < 0 || y1 > 100000)
        {
            currentCase--;
            continue;
        }
        else if (y2 < 0 || y2 > 100000)
        {
            currentCase--;
            continue;
        }

        stepsFromOriginToPointOne = ((1+(x1+y1)) * (x1+y1) / 2) + x1;
        stepsFromOriginToPointTwo = ((1+(x2+y2)) * (x2+y2) / 2) + x2;

        stepsNeededBetweenTwoPoints = stepsFromOriginToPointTwo - stepsFromOriginToPointOne;

        if ( stepsNeededBetweenTwoPoints < 0 )
        {
            currentCase--;
            continue;
        }

        std::cout << "Case " << currentCase << ": " << stepsNeededBetweenTwoPoints << std::endl;

    }

    return 0;
}
