#include <iostream>
#include <string>
#include <sstream>

std::string path[15] = { "0,0", "0,1", "1,0", "0,2", "1,1", "2,0", "0,3", "1,2", "2,1", "3,0", "0,4", "1,3", "2,2", "3,1", "4,0" };

int main(void)
{
	std::string input, source, target;

	int stepsTaken = 0, sourceIndex = 0, targetIndex = 0;

	int currentCase = 0, amountOfCases = 0;

	long long int a, b, c, d;

	std::cin >> amountOfCases;

	std::cin.ignore();

	for (int k = 0; k < amountOfCases; k++)
	{
		currentCase++;
		source = "";
		target = "";

		//std::getline(std::cin, input);

		std::cin >> a >> b >> c >> d;

		std::string aString, bString, cString, dString;
		std::stringstream out;
		out << a;
		aString = out.str();
		out.str("");
		out << b;
		bString = out.str();
		out.str("");
		out << c;
		cString = out.str();
		out.str("");
		out << d;
		dString = out.str();
		out.str("");

		source = source + aString + "," + bString;

		target = target + cString + "," + dString;

		//std::cout << "source is: " << source << " and target is " << target << std::endl;

		for (int i = 0; i < 15; i++)
		{
			if (path[i] == source)
			{
				sourceIndex = i;
			}
			else if (path[i] == target)
			{
				targetIndex = i;
			}
		}

		stepsTaken = targetIndex - sourceIndex;
		//std::cout << "source is: " << sourceIndex << " and target is " << targetIndex << std::endl;

		std::cout << "Case " << currentCase << ": " << stepsTaken;

	}



	return 0;
}
