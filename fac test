#include <iostream>
#include <string>

std::string answer;

int fac(int n)
{
    if ( n < 2 )
    {
        return 1;
    }
    else
        return fac(n-1) * n;
}


int main(void)
{
    int input = 0;
    
    std::cout << "Please enter a number: ";
    
    std::cin >> input;
    
    answer = std::to_string(fac(input));
    //std::cout << answer;
    int count = 0;
    
    for(int i = 0 ; i < (int)answer.size(); i++)
    {
        if ( answer[i] == '0' )
        {
            count++;
        }
    }
    
    
    std::cout << input << "! yields " << answer << " and it has " << count << " zeros!" << std::endl;
    
    return 0;
}
